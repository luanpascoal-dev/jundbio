RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Protege o arquivo .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

<Files .sql>
    Order allow,deny
    Deny from all
</Files>

<Files .env>
    Order allow,deny
    Deny from all
</Files>

<Files .css>
    Order allow,deny
    Deny from all
</Files>

<Files .js>
    Order allow,deny
    Deny from all
</Files>

<Files .png>
    Order allow,deny
    Deny from all
</Files>

<Files database.php>
    Order allow,deny
    Deny from all
</Files>

<Files sidebar.php>
    Order allow,deny
    Deny from all
</Files>

# Redirecionar erros 404 para a página personalizada
ErrorDocument 404 /JundBio/404.php

# Prevenir listagem de diretórios
Options -Indexes

# Proteger arquivos sensíveis
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger arquivos de configuração
<FilesMatch "^(database\.php|config\.php)">
    Order allow,deny
    Deny from all
</FilesMatch>

